
<div class='container w-25'>

<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;'} %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;'} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'button-purple' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
