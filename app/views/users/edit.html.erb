<h1>Edit Profile</h1>

<div class="container w-25">
  <%= simple_form_for @user, url: update_user_path(@user), method: :patch do |f| %>
    <%= f.input :name, style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;'%>
    <%= f.input :email, style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;' %>
    <%= f.input :birthdate, as: :date , style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;'%>
    <%= f.input :password, label: "New Password", required: false, placeholder: "Change password here" , style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;'%>
    <%= f.input :password_confirmation, label: "Confirm New Password", required: false , style: 'border: 3px solid #f8a3fcd1; border-radius: 20px;'%>

    <%= f.button :submit, 'Update', class: 'button-purple' %>
  <% end %>
</div>
